@model PagedList.IPagedList<MvcMotorbikeStore.Models.XEGANMAY>
@using PagedList.Mvc
@{
    ViewBag.Title = "SPTheoNPP";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div id="templatemo_content">

    <div id="templatemo_content_left">
        <div class="templatemo_content_left_section">
            <h1>Categories</h1>

            <ul>
                @Html.Action("Loaixe", "MotorbikeStore")
            </ul>
        </div>
        <div class="templatemo_content_left_section">
            <h1>Providers</h1>
            <ul>
                @Html.Action("Nhaphanphoi", "MotorbikeStore")
            </ul>
        </div>

        <div class="templatemo_content_left_section">
            <a href="#"><img style="border:0;width:88px;height:31px" src="http://www.w3.org/Icons/valid-xhtml10" alt="Valid XHTML 1.0 Transitional" width="88" height="31" vspace="8" border="0" /></a>
            <a href="#"><img style="border:0;width:88px;height:31px" src="http://jigsaw.w3.org/css-validator/images/vcss-blue" alt="Valid CSS!" vspace="8" border="0" /></a>
        </div>
    </div> <!-- end of content left -->

    <div id="templatemo_content_right">
        @foreach (var xe in Model)
        {
            <div class="templatemo_product_box">
                <a href="@Url.Action("Details","MotorbikeStore", new {id = xe.MaXe})">
                    <h1>@xe.TenXe  <span></span></h1>
                    <img src="~/Images/@xe.Anhbia" alt="@xe.TenXe" style="object-fit:contain" width="100px" height="150px" />
                </a>

                <div class="product_info">
                    <p>@xe.Mota</p>
                    <h3>@xe.Giaban</h3>
                    <div class="buy_now_button"><a href="subpage.html">Buy Now</a></div>
                    <div class="detail_button"><a href="subpage.html">Detail</a></div>
                </div>
                <div class="cleaner">&nbsp;</div>
            </div>
        }
        <div class="cleaner">&nbsp;</div>
        Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
        <div class="MenuTrang">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
        </div>
        <a href="#"><img src="~/Images/templatemo_ads.jpg" alt="ads" /></a>
    </div> <!-- end of content right -->

    <div class="cleaner_with_height">&nbsp;</div>
</div> <!-- end of content -->